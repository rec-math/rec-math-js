{
  "name": "@pbuk/rec-math",
  "version": "2.0.0",
  "description": "Packages for recreational mathematics in the browser (or NodeJS)",
  "homepage": "https://rec-math.github.io/",
  "bugs": "https://github.com/rec-math/rec-math-js/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rec-math/rec-math-js.git"
  },
  "author": "pbuk (https://github.com/pb-uk)",
  "keywords": [
    "recreational",
    "math"
  ],
  "license": "MIT",
  "type": "module",
  "types": "types",
  "files": [
    "dist",
    "esm",
    "types"
  ],
  "scripts": {
    "build": "rimraf dist esm types && npm run check && npm run test:unit && rollup -c && tsc --project tsconfig.types.json",
    "check": "eslint . && prettier . --ignore-path .eslintignore --check",
    "fix": "eslint . --fix && prettier . --ignore-path .eslintignore --write",
    "test:unit": "jest src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/jest": "^29.5.11",
    "eslint-plugin-jest": "^27.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/node18": "^18.2.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "camelcase": "^8.0.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6"
  }
}
